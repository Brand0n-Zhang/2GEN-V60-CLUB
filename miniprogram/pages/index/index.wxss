.main {
overflow: hidden;
width: 100%;
display: flex;
flex-direction: column;
align-items: center;
}
.title{
  width: 75%;
  margin-top: 40rpx;
  opacity: 0.7;
  /* margin-left: 40rpx; */
}
.headImg{
  width: 100%;
  height: 450rpx;
  background-size: cover;  
  background-image: url("https://zbd-image.oss-cn-hangzhou.aliyuncs.com/2GEN-V60-CLUB/bg.jpeg");
  animation: headShow 2s;
}
@keyframes headShow {
  0%{
    opacity: 0;
    transform: translateX(-50rpx);
  }
  100%{
    opacity: 1;
    transform: translateX(0);
  }
}